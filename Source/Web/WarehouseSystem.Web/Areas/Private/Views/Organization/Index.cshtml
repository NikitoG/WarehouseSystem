@model WarehouseSystem.Web.Areas.Private.ViewModels.Organizations.IndividualStatisticsViewModel
@{
    ViewBag.Title = "User Area";
}

<div class="row">
    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
        <a href="/Private/Orders/New">
            <div class="card red summary-inline">
                <div class="card-body">
                    <i class="icon fa fa-inbox fa-4x"></i>
                    <div class="content">
                        <div class="title">@Model.Orders</div>
                        <div class="sub-title">Orders</div>
                    </div>
                    <div class="clear-both"></div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
        <a href="/Private/Messages/Inbox">
            <div class="card yellow summary-inline">
                <div class="card-body">
                    <i class="icon fa fa-comments fa-4x"></i>
                    <div class="content">
                        <div class="title">@Model.Messages</div>
                        <div class="sub-title">New Message</div>
                    </div>
                    <div class="clear-both"></div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
        <a href="/Private/Products">
            <div class="card green summary-inline">
                <div class="card-body">
                    <i class="icon fa fa-tags fa-4x"></i>
                    <div class="content">
                        <div class="title">@Model.Products</div>
                        <div class="sub-title">Product</div>
                    </div>
                    <div class="clear-both"></div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
        <a href="/Private/Suppliers/Index">
            <div class="card blue summary-inline">
                <div class="card-body">
                    <i class="icon fa fa-share-alt fa-4x"></i>
                    <div class="content">
                        <div class="title">@Model.Partners</div>
                        <div class="sub-title">Partners</div>
                    </div>
                    <div class="clear-both"></div>
                </div>
            </div>
        </a>
    </div>
</div>


<div class="row  no-margin-bottom">
    <div class="col-sm-6 col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <div class="card primary">
                    <div class="card-jumbotron no-padding">
                        <canvas id="jumbotron-line-chart" class="chart no-padding"></canvas>
                    </div>
                    <div class="card-body half-padding">
                        <h4 class="float-left no-margin font-weight-300">Orders</h4>
                        <h2 class="float-right no-margin font-weight-300">@Model.Orders</h2>
                        <div class="clear-both"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>