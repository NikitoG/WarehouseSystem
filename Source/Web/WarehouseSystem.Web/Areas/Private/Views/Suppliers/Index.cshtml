@model IList<WarehouseSystem.Web.Areas.Private.ViewModels.PartialModels.PartnersViewModel>
@{
    ViewBag.Title = "Index";
}


@for (int i = 0; i < Model.Count(); i += 4)
{
    <div class="row">
        @for (int j = i; j < i + 4 && j < Model.Count(); j++)
        {
            <div class="col-md-3 col-sm-12">
                <div class="thumbnail no-margin-bottom float-left">
                    @if (string.IsNullOrWhiteSpace(Model[j].LogoUrl))
                    {
                        <img src="~/Content/Theme/img/profile/supplier.jpg" class="img-responsive">
                    }
                    else
                    {
                        <img src="@Model[j].LogoUrl" class="img-responsive">
                    }

                    <div class="caption">
                        <h3 id="thumbnail-label">
                            @Model[j].Name<a class="anchorjs-link" href="#thumbnail-label"><span class="anchorjs-icon"></span></a>
                        </h3>
                        <p>@(string.Join(", ", Model[j].Categories))</p>
                        <p>
                            <a href="/suppliers/@Model[j].Id" class="btn btn-primary" role="button">Details</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}

