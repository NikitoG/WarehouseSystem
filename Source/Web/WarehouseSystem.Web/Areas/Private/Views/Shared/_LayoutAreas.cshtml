<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - User Area</title>
    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:300,400' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,900' rel='stylesheet' type='text/css'>
    <!-- CSS Libs -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendo")
    <!-- CSS App -->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
</head>
<body class="flat-blue">
    <div class="app-container">
        <div class="row content-container">

            @Html.Action("Header", "Partial", new { area = "Private"})

            @Html.Action("SideMenu", "Partial", new { area = "Private" })

            <div class="container-fluid">
                <div class="side-body padding-top">
                    @RenderBody()
                </div>
            </div>
        </div>
        <hr />
        <footer class="app-footer">
            <div class="wrapper">
                <span class="pull-right">2.1 <a href="#"><i class="fa fa-long-arrow-up"></i></a></span> © @DateTime.Now.Year, WS-NG.
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/theme")
    @RenderSection("scripts", required: false)
</body>
</html>
