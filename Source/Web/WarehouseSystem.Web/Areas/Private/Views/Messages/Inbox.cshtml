@section scripts {
    @Scripts.Render("~/bundles/timeago")

    <script>
        $("a[data-action='details']").click(function () {
            var id = $(this).attr("data-id");
            viewMessage(id);
        });

        function viewMessage(id) {
            $(".tab-pane").attr("id", "stepv" + id);
            $.get("/message/" + id,
                function (data) {
                    $("#details-message").html(data);
                });
        }
    </script>
}

