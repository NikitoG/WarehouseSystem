@using System.Collections
@model WarehouseSystem.Web.Areas.Private.ViewModels.Messages.SendMessageViewModel


<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    <div class="title">Sent Message</div>
                </div>
            </div>
            <br />
            <br />
            <div class="card-body">
                @using (Html.BeginForm("Create", "Messages", new { area = "Private" }, FormMethod.Post, new { role = "form", id = "send" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.To, new {@class = "col-sm-2 control-label"})
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m => m.To, (IEnumerable<SelectListItem>) TempData["users"], "-- Select User --", new {@class = "form-control"})
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(m => m.Title, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.EditorFor(m => m.Title, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(m => m.Content, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.EditorFor(m => m.Content, new { @class = "form-control"})
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <div class="login-button text-center">
                            <input type="submit" class="btn btn-primary" value="Send" />
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

