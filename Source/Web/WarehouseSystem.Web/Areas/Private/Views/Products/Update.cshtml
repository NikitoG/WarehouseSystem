@model WarehouseSystem.Web.Areas.Private.ViewModels.Products.SupplierProductViewModel
@{
    ViewBag.Title = "Update";
}

<div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    <div class="title">@ViewBag.Title</div>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Update", "Products", new { area = "Private" }, FormMethod.Post, new { role = "form", enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.CategoryId, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m => m.CategoryId, (IEnumerable<SelectListItem>)TempData["Categories"], new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.EditorFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Sku, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.EditorFor(m => m.Sku, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DeliveryUnit, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.EditorFor(m => m.DeliveryUnit, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.IsBlocked, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.EditorFor(m => m.IsBlocked, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.WeightInGr, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.EditorFor(m => m.WeightInGr, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Barcode, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.EditorFor(m => m.Barcode, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.HeigthInCm, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.EditorFor(m => m.HeigthInCm, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.WidthInCm, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.EditorFor(m => m.WidthInCm, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.MinDayOfExpiryInDays, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.EditorFor(m => m.MinDayOfExpiryInDays, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <strong class="col-sm-2 control-label">Image</strong>
                        <div class="col-sm-10">
                            <input type="file" name="UploadedImage" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="login-button text-center">
                            <input type="submit" class="btn btn-primary" value="Update" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Back to products", "Index", "Products", new { area = "Private" }, null)
                    </p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}