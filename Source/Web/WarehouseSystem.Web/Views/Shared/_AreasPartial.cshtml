@if (User.IsInRole("Administrator"))
{
    @Html.ActionLink("Admin area »", "Index", "Admin", new { area = "Administration" }, new { @class = "btn btn-primary btn-lg app-btn" })
}
else if (Request.IsAuthenticated)
{
    @Html.ActionLink("User area »", "Index", "Organization", new { area = "Private"}, new { @class = "btn btn-primary btn-lg app-btn" })
}
else
{
    @Html.ActionLink("Sign in »", "Login", "Account", null, new {@class = "btn btn-primary btn-lg app-btn" })
}