@model IList<string>

<div class="container-fluid app-content-a">
    <div class="container">
        <h2 class="text-center app-content-header">Our Products</h2>

        @if (@Model.Count == 0)
        {
            <h3 class="text-center app-content-header">Empty</h3>
        }
        else
        {
            for (int i = 0; i < @Model.Count(); i = i + 4)
            {
                <div class="row text-center">

                    @for (int j = i; j < i + 4 && j < @Model.Count(); j++)
                    {
                        <div class="col-md-3 col-sm-6">
                            <span class="fa-stack fa-lg fa-5x">
                                <i class="fa fa-circle-thin fa-stack-2x"></i>
                                <i class="fa fa-comments-o fa-stack-1x"></i>
                            </span>
                            <h2>@Model[j]</h2>
                        </div>
                    <!-- /.col-lg-3 -->
                    }

                </div>
            }
        }

    </div>
</div>